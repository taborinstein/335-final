SRC := $(wildcard src/*.c)
OBJ := $(patsubst src/%.c, build/%.o, $(SRC))
EXE := main_nolib

all: dircheck $(EXE)
$(EXE): $(OBJ)
	@echo -e $@"\0"$^"\0" cc -o $@ $^
$(OBJ): build/%.o: src/%.c
	@echo -e $@"\0"$^"\0" cc -c -o $@ $^
dircheck:
	@echo -e $@"\0"$^"\0" @mkdir -p build
clean:
	@echo -e $@"\0"$^"\0" rm -f $(EXE) $(OBJ)
.PHONY: dircheck all clean
